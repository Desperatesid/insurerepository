
pipeline {
  agent any
    tools{
      maven 'M2_HOME'
          }
   stages {
    stage('Git checkout the code') {
      steps {
         echo 'This is for cloning the gitrepo'
         git branch: 'main', url: 'https://github.com/Desperatesid/insurerepository.git'
                          }
            }
    stage(' Package') {
      steps {
         echo 'This will create a package using maven'
         sh 'mvn package'
                             }
            }
  stage('Publish HTML Reports') {
      steps {
          publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: false, reportDir: '/var/lib/jenkins/workspace/Insure-Project/target/surefire-reports', reportFiles: 'index.html', reportName: 'HTML Report', reportTitles: '', useWrapperFileDirectly: true])
                        }
            
            }
stage('Create Docker image from the') {
      steps {
        sh 'docker build -t sidharth1997/insurerepository:2.0 .'
                    }
            }
   stage('Login to Dockerhub') {
      steps {
      withCredentials([usernamePassword(credentialsId: '33b97db4-c606-45d4-9607-4b62cb70e89b', passwordVariable: 'passess', usernameVariable: 'users')]) {
    sh 'docker login -u ${users} -p ${passess}'
         }
            }}
    stage('Push the Docker image') {
      steps {
        sh 'docker push sidharth1997/insurerepository:2.0'
                                }
            }
   stage('Ansbile config and Deployment') {
      steps {
       ansiblePlaybook credentialsId: 'ansible-ssh', disableHostKeyChecking: true, installation: 'Ansible', inventory: '/etc/ansible/hosts', playbook: 'ansible.yml', vaultTmpPath: ''                         }
            }


    }
}
