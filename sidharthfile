
pipeline {
  agent any
    tools{
      maven 'M2_HOME'
          }
   stages {
    stage('Git checkout') {
      steps {
         echo 'This is for cloning the gitrepo'
         git branch: 'main', url: 'https://github.com/Desperatesid/insurerepository.git'
                          }
            }
    stage('Create a Package') {
      steps {
         echo 'This will create a package using maven'
         sh 'mvn package'
                             }
            }

    stage('Publish the HTML Reports') {
      steps {
         publishHTML([allowMissing: false, alwaysLinkToLastBuild: false, keepAll: false, reportDir: '/var/lib/jenkins/workspace/insuremeproject/target/surefire-reports', reportFiles: 'index.html', reportName: 'HTML Report', reportTitles: '', useWrapperFileDirectly: true])
            } }
    stage('Create a Docker image from the Package Insure-Me.jar file') {
      steps {
        sh 'docker build -t sidharth1997/insurerepository:1.0 .'

                    }
            }
   stage('Login to Dockerhub') {
      steps {
      withCredentials([usernamePassword(credentialsId: 'fb70c40e-6328-483b-a779-d7b43563b5a0', passwordVariable: 'passvars', usernameVariable: 'usrvars')]) {
   sh 'docker login -u ${usrvars} -p ${passvars}'
         }
            }}
    stage('Push the Docker image') {
      steps {
        sh 'docker push sidharth1997/insurerepository:1.0'
                                }
            }
         stage('Ansbile configuration and Deployment') {
      steps {
      ansiblePlaybook disableHostKeyChecking: true, installation: 'ansible', inventory: '/etc/ansible/hosts', playbook: 'ansible.yml', vaultTmpPath: ''                         }
            }


}
    }
}
